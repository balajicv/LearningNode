<div class="container">

      <form class="form-signin" action='/newuser' method='post' id='f'>
        <h2 class="form-signin-heading">Account Registration</h2>

        <label for="username" class="sr-only">Username</label>
        <input type="text" name='uname' id="username" class="form-control" placeholder="Username" required autofocus>
        <label for="pin" class="sr-only">Password</label>
        <input type="password" id="pin" name="password" class="form-control" placeholder="Password" required>
        <label for="email" class="sr-only">Email ID</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Email ID" required>  
        <div>      
        	<br><button class="btn btn-lg btn-primary btn-block" type="submit" form='f'>Sign Up</button></br>
    	</div>
      </form>

    </div> 


